{
  "name": "hikibiki-app",
  "version": "0.0.1",
  "description": "Look up words and stuff",
  "main": "src/main.tsx",
  "devDependencies": {
    "@babel/core": "7.22.10",
    "@fullhuman/postcss-purgecss": "5.0.0",
    "@relative-ci/agent": "4.1.6",
    "autoprefixer": "10.4.15",
    "babel-loader": "9.1.3",
    "clean-webpack-plugin": "4.0.0",
    "copy-webpack-plugin": "11.0.0",
    "css-loader": "6.8.1",
    "cssnano": "6.0.1",
    "html-webpack-plugin": "5.5.3",
    "husky": "8.0.3",
    "lint-staged": "14.0.0",
    "mini-css-extract-plugin": "2.7.6",
    "postcss": "8.4.28",
    "postcss-import": "15.1.0",
    "postcss-loader": "7.3.3",
    "prettier": "3.0.2",
    "react-cosmos": "^5.7.2",
    "style-loader": "3.3.3",
    "ts-loader": "9.4.4",
    "typescript": "5.1.6",
    "webpack": "5.88.2",
    "webpack-cli": "5.1.4",
    "webpack-dev-server": "4.15.1",
    "workbox-webpack-plugin": "7.0.0"
  },
  "scripts": {
    "build": "webpack --define-process-env-node-env production",
    "build:stats": "webpack --json --define-process-env-node-env production > webpack-stats.json",
    "cosmos": "cosmos --port 5001",
    "build:cosmos": "cosmos-export",
    "postinstall": "husky install",
    "start": "webpack serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/birchill/hikibiki-app.git"
  },
  "keywords": [
    "kanji",
    "漢字"
  ],
  "author": "Brian Birtles",
  "bugs": {
    "url": "https://github.com/birchill/hikibiki-app/issues"
  },
  "homepage": "https://hikibiki.app/",
  "dependencies": {
    "@birchill/bugsnag-zero": "0.6.3",
    "@birchill/jpdict-idb": "^2.1.0",
    "@birchill/normal-jp": "^1.4.0",
    "idb-keyval": "^6.2.1",
    "preact": "^10.17.0",
    "tailwindcss": "^3.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "goodBundle": {
    "assets": {
      "hikibiki.js": "./dist/hikibiki.*.js",
      "worker.js": "./dist/worker.*.js",
      "hikibiki.css": "./dist/hikibiki.*.css"
    },
    "output": {
      "format": [
        "csv",
        "json"
      ],
      "project": "hikibiki",
      "bucket": "bundlesize-stack-bundlestatsbucket-15h4d77z8q1hr",
      "destDir": "hikibiki",
      "region": "us-west-2"
    },
    "stats": "webpack-stats.json"
  }
}
